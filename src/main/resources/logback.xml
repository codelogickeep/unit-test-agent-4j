<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for user-facing progress (INFO level) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%-5level] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Verbose console appender for debugging (DEBUG level) -->
    <appender name="CONSOLE_DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger defaults to INFO -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Agent tools - configurable via system property or environment variable -->
    <!-- Use -Dut.agent.log.level=DEBUG to enable verbose logging -->
    <logger name="com.codelogickeep.agent.ut.tools" level="${ut.agent.log.level:-INFO}" />
    <logger name="com.codelogickeep.agent.ut.engine" level="${ut.agent.log.level:-INFO}" />
    
    <!-- Custom framework - INFO level by default -->
    <logger name="com.codelogickeep.agent.ut.framework" level="${ut.framework.log.level:-INFO}" />
    
    <!-- LangChain4j framework - 可通过 -Dllm.log.requests=true 启用 DEBUG -->
    <logger name="dev.langchain4j" level="${llm.log.level:-WARN}" />
    <logger name="dev.langchain4j.model.openai" level="${llm.log.level:-WARN}" />
    
    <!-- Third-party libraries - keep quiet -->
    <logger name="org.apache.http" level="WARN" />
    <logger name="io.netty" level="WARN" />
    <logger name="org.eclipse.jgit" level="WARN" />
    <logger name="org.reflections" level="WARN" />
</configuration>
